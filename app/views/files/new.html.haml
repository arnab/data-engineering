= provide :title, 'Import Data'
%h1 Import Your Data

.row
  .span6.offset4
    = form_tag(files_path) do
      .span6
        = label_tag :data, 'Please upload a tab-delimited file'
        %span.help-block
          example:
          = link_to 'here', 'https://raw.github.com/lschallenges/data-engineering/master/example_input.tab'
        = file_field_tag :data, :class => 'input-xlarge'
      .span6
        = submit_tag "Upload", :class => "btn btn-large btn-primary"
